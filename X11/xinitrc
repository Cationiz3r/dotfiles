#!/bin/sh
xset m 20/10 10 r rate 300 30 b on &
xhost +si:localuser:$USER &

killall dunst; dunst &
dunstctl rule lockscreen disable &
ibus-daemon -drx &
overcharge &
picom --config "$PICOM_CONF" &
redshift &
$XDG_CONFIG_HOME/polybar/launch &
forgetful -g &
mpd-notify &
numlockx &
waldate &

for d in thumbnails tordownload; do
	mkdir -p "$XDG_RUNTIME_DIR/$d" &
done
rm -rf "$XDG_CACHE_HOME/thumbnails"
ln -s "$XDG_RUNTIME_DIR/thumbnails" "$XDG_CACHE_HOME"

exec openbox

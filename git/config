	name = Martin Cation
	email = martincation@protonmail.com
	signingkey = D0DABDF1E1EA085D
[core]
	pager = less -FRx2
[init]
	defaultBranch = main
[color "diff"]
	meta = bold blue
	frag = bold brightmagenta
	old = brightred
	new = bold brightwhite
[log]
	graphColors = bold blue
[alias]
	root = rev-parse --show-toplevel
	ls = ls-tree -r --name-only HEAD
	l = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) %C(bold green)(%ar)%C(reset) %C(bold brightwhite)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold brightred)%d%C(reset)'
	la = l --all
	br = branch  --sort=-committerdate --format='%(color:bold blue)%(HEAD) %(color:bold brightred)%(refname:short)%(color:reset) %(color:bold green)(%(committerdate:relative))%(color:reset) %(color:bold brightwhite)%(contents:subject)%(color:reset) %(color:dim white)- %(authorname)%(color:reset)'
	cm = commit -m
	cma = commit --amend
	r5 = rebase -i HEAD~5
	re = rebase -i
	s = status -sb
	co = checkout
	cob = checkout -b
	del = branch -D
	ud = reset --soft HEAD~1
	fg = reset --hard
	d = diff --staged
	dc = diff --stat --staged
	dd = diff
	ds = diff --stat
	last = log -1 --stat HEAD
	cc = shortlog -sen
	p = push
	pl = pull
	a = add
[pull]
	rebase = true
[commit]
	gpgsign = true
[tag]
	gpgSign = true
[credential]
	helper = store


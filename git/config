[alias]
	a = add
	ac = merge --abort
	ap = cherry-pick --abort
	ar = rebase --abort
	b = branch \
		--sort=-committerdate \
		--format='%(color:bold blue)%(HEAD) \
%(color:bold brightred)%(refname:short)%(color:reset) \
%(color:bold green)(%(committerdate:relative))%(color:reset) \
%(color:bold brightwhite)%(contents:subject)%(color:reset) \
%(color:dim white)- %(authorname)%(color:reset)'
	ba = b -a
	c = clone
	cc = rev-list --count HEAD
	cm = commit -m
	cma = commit --amend
	cb = co -b
	co = checkout
	ct = shortlog -sen
	d = dd --staged
	dc = ds --staged
	dd = diff --color-words
	del = branch -D
	ds = diff --stat
	e = remote -v
	f = fetch
	fa = f --all
	fg = reset --hard
	fp = fa --prune
	i = init
	l = ll --max-count=20
	la = l --all
	last = log -1 --stat HEAD
	ll = log --graph \
		--abbrev-commit \
		--decorate \
		--date=format-local:'%y/%m/%d %H:%M' \
		--format=format:'%C(bold blue)%h \
%C(reset)%C(green)%ad\
%C(reset)%C(bold brightwhite) %s \
%C(reset)%C(dim white)- %an \
%C(reset)%C(bold italic brightred)%D'
	lla = ll --all
	ls = ls-tree -r --name-only HEAD
	m = merge -m
	p = push
	pa = p --all
	pk = cherry-pick
	pl = pull
	pp = pa --prune
	re = rebase -i
	root = rev-parse --show-toplevel
	rs = restore --staged
	s = status -sb
	ss = s .
	st = show --stat
	sw = show --color-words
	t = tag
	ud = reset --soft HEAD~1
[color "diff"]
	frag = bold brightmagenta
	meta = bold blue
	new = bold brightwhite
	old = brightred
[color "status"]
	added = bold white
	changed = bold red
	header = white
	localBranch = bold red
	nobranch = bold red ul
	remoteBranch = bold red
	unmerged = bold red
	untracked = bold red
	updated = bold white
[commit]
	gpgsign = true
[core]
	pager = less -FRx2
[credential]
	helper = store
[init]
	defaultBranch = main
[log]
	graphColors = bold blue
[merge]
	ff = false
[pull]
	ff = only
	rebase = true
[tag]
	gpgSign = true


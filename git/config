[core]
	pager = less -FRx2
[init]
	defaultBranch = main
[color "diff"]
	meta = bold blue
	frag = bold brightmagenta
	old = brightred
	new = bold brightwhite
[log]
	graphColors = bold blue
[alias]
	root = rev-parse --show-toplevel
	ls = ls-tree -r --name-only HEAD
	l = ll --max-count=20
	ll = log --graph --abbrev-commit --decorate --date=format-local:'%y/%m/%d %H:%M' --format=format:'%C(bold blue)%h %C(reset)%C(green)%ad%C(reset)%C(bold brightwhite) %s %C(reset)%C(dim white)- %an %C(reset)%C(bold italic brightred)%D'
	la = l --all
	lla = ll --all
	br = branch  --sort=-committerdate --format='%(color:bold blue)%(HEAD) %(color:bold brightred)%(refname:short)%(color:reset) %(color:bold green)(%(committerdate:relative))%(color:reset) %(color:bold brightwhite)%(contents:subject)%(color:reset) %(color:dim white)- %(authorname)%(color:reset)'
	cm = commit -m
	cma = commit --amend
	r5 = rebase -i HEAD~5
	re = rebase -i
	s = status -sb
	ss = s .
	co = checkout
	cob = checkout -b
	del = branch -D
	ud = reset --soft HEAD~1
	fg = reset --hard
	d = diff --staged --color-words
	dc = diff --stat --staged
	dd = diff --color-words
	ds = diff --stat
	last = log -1 --stat HEAD
	cc = rev-list --count HEAD
	ct = shortlog -sen
	p = push
	pl = pull
	a = add
	rs = restore --staged
[pull]
	rebase = true
	ff = only
[commit]
	gpgsign = true
[tag]
	gpgSign = true
[credential]
	helper = store


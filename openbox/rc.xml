<?xml version="1.0" encoding="UTF-8"?>
<openbox_config xmlns="http://openbox.org/3.6/rc">
	<resistance>
		<padding>10</padding>
		<strength>100</strength>
		<screen_edge_strength>200</screen_edge_strength>
	</resistance>
	<focus>
		<focusNew>yes</focusNew>
		<followMouse>no</followMouse>
		<focusLast>yes</focusLast>
		<underMouse>no</underMouse>
		<focusDelay>200</focusDelay>
		<raiseOnFocus>no</raiseOnFocus>
	</focus>
	<placement>
		<policy>Smart</policy>
		<center>yes</center>
		<monitor>Mouse</monitor>
	</placement>
	<theme>
		<name>huelessOS-openbox</name>
		<titleLayout>L</titleLayout>
		<keepBorder>yes</keepBorder>
		<animateIconify>no</animateIconify>
		<font place="ActiveWindow">           <name>Poppins</name><size>10</size><weight>Normal</weight><slant>Normal</slant></font>
		<font place="InactiveWindow">         <name>Poppins</name><size>10</size><weight>Normal</weight><slant>Normal</slant></font>
		<font place="MenuHeader">             <name>Poppins</name><size>10</size><weight>Normal</weight><slant>Normal</slant></font>
		<font place="MenuItem">               <name>Poppins</name><size>10</size><weight>Normal</weight><slant>Normal</slant></font>
		<font place="OnScreenDisplay">        <name>Poppins</name><size>10</size><weight>Normal</weight><slant>Normal</slant></font>
		<font place="ActiveOnScreenDisplay">  <name>Poppins</name><size>8 </size><weight>Normal</weight><slant>Normal</slant></font>
		<font place="InactiveOnScreenDisplay"><name>Poppins</name><size>8 </size><weight>Normal</weight><slant>Normal</slant></font>
	</theme>
	<desktops>
		<number>8</number>
		<firstdesk>1</firstdesk>
		<maximum>8</maximum>
		<popupTime>0</popupTime>
	</desktops>
	<resize>
		<drawContents>yes</drawContents>
		<popupShow>Never</popupShow>
	</resize>
	<margins><top>10</top><bottom>10</bottom><left>10</left><right>10</right></margins>
	<keyboard>
		<chainQuitKey>C-g</chainQuitKey>

	<!-- Openbox control -->
		<keybind key="S-W-F5"><action name="Restart"/></keybind>
		<keybind key="  W-F5"><action name="Reconfigure"/></keybind>
		<keybind key="C-A-Delete C-S-W-q"><action name="SessionLogout"><prompt>no</prompt></action></keybind>

	<!-- Desktop control -->
		<keybind key="  W-z"> <action name="GoToDesktop"><wrap>no</wrap><to>previous</to></action></keybind>
		<keybind key="  W-c"> <action name="GoToDesktop"><wrap>no</wrap><to>next</to></action></keybind>
		<keybind key="  W-F1"><action name="GotoDesktop"><to>1</to></action></keybind>
		<keybind key="  W-F2"><action name="GotoDesktop"><to>2</to></action></keybind>
		<keybind key="  W-F3"><action name="GotoDesktop"><to>3</to></action></keybind>
		<keybind key="  W-F4"><action name="GotoDesktop"><to>4</to></action></keybind>
		<keybind key="S-W-z"> <action name="SendToDesktop"><wrap>no</wrap><to>previous</to></action></keybind>
		<keybind key="S-W-c"> <action name="SendToDesktop"><wrap>no</wrap><to>next</to></action></keybind>
		<keybind key="S-W-F1"><action name="SendToDesktop"><to>1</to></action></keybind>
		<keybind key="S-W-F2"><action name="SendToDesktop"><to>2</to></action></keybind>
		<keybind key="S-W-F3"><action name="SendToDesktop"><to>3</to></action></keybind>
		<keybind key="S-W-F4"><action name="SendToDesktop"><to>4</to></action></keybind>

	<!-- Window control -->
		<keybind key="A-F4 C-q"><action name="Close"/></keybind>
		<keybind key="C-A-d W-d"><action name="ToggleShowDesktop"/></keybind>
		<keybind key="S-W-f"><action name="ToggleDecorations"/></keybind>
		<keybind key="C-W-p"><action name="ToggleAlwaysOnTop"/></keybind>
		<keybind key="C-W-o"><action name="ToggleOmnipresent"/></keybind>
		<keybind key="A-F11"><action name="ToggleFullscreen"/></keybind>
		<keybind key="  A-Tab"><action name="NextWindow">    <dialog>none</dialog><raise>yes</raise></action></keybind>
		<keybind key="S-A-Tab"><action name="PreviousWindow"><dialog>none</dialog><raise>yes</raise></action></keybind>
		<keybind key="W-Up    C-W-s"><action name="ToggleMaximize"/></keybind>
		<keybind key="W-Down  C-W-x"><action name="Iconify"/></keybind>
		<keybind key="W-Left  C-W-z"><action name="Snap"><direction>west</direction></action></keybind>
		<keybind key="W-Right C-W-c"><action name="Snap"><direction>east</direction></action></keybind>

<!-- Commands -->
	<!-- Launcher -->
		<keybind key="  W-1"><action name="Execute"><command>kitty</command></action></keybind>
		<keybind key="  W-2"><action name="Execute"><command>librewolf</command></action></keybind>
		<keybind key="  W-3"><action name="Execute"><command>steam</command></action></keybind>
		<keybind key="  W-q"><action name="Execute"><command>discord</command></action></keybind>
		<keybind key="  W-w"><action name="Execute"><command>pavucontrol</command></action></keybind>
		<keybind key="  W-e"><action name="Execute"><command>thunar</command></action></keybind>
		<keybind key="S-W-1"><action name="Execute"><command>leafpad</command></action></keybind>
		<keybind key="S-W-2"><action name="Execute"><command>tor-browser</command></action></keybind>
		<keybind key="S-W-3"><action name="Execute"><command>krita</command></action></keybind>
	<!-- Function keys -->
		<keybind key="XF86AudioMute         C-Insert">   <action name="Execute"><command>pavol -m</command></action></keybind>
		<keybind key="XF86AudioLowerVolume  C-End">      <action name="Execute"><command>pavol -5%</command></action></keybind>
		<keybind key="XF86AudioRaiseVolume  C-Home">     <action name="Execute"><command>pavol +5%</command></action></keybind>
		<keybind key="XF86MonBrightnessDown C-Page_Down"><action name="Execute"><command>snaplight -d</command></action></keybind>
		<keybind key="XF86MonBrightnessUp   C-Page_Up">  <action name="Execute"><command>snaplight -u</command></action></keybind>
		<keybind key="XF86Display"><action name="Execute"><command>sh -c 'pgrep arandr || arandr'</command></action></keybind>
		<keybind key="  Print"><action name="Execute"><command>shoot</command></action></keybind>
		<keybind key="S-Print"><action name="Execute"><command>shoot -a</command></action></keybind>
		<keybind key="C-Print"><action name="Execute"><command>shoot -w</command></action></keybind>
	<!-- MPD control -->
		<keybind key="  F9 "><action name="Execute"><command>mpc toggle</command></action></keybind>
		<keybind key="S-F9 "><action name="Execute"><command>mpc clear</command></action></keybind>
		<keybind key="  F10"><action name="Execute"><command>mpc next</command></action></keybind>
		<keybind key="S-F10"><action name="Execute"><command>mpc prev</command></action></keybind>
	<!-- Misc. -->
		<keybind key="Scroll_Lock"><action name="Execute"><command>keylight -t</command></action></keybind>
		<keybind key="A-F2 W-x"><action name="Execute"><command>rofi -show run</command></action></keybind>
		<keybind key="C-Escape"><action name="Execute"><command>keylight -f</command></action></keybind>
		<keybind key="W-grave"><action name="Execute"><command>lbr</command></action></keybind>
		<keybind key="  Pause"><action name="Execute"><prompt>Suspend?</prompt><command>sh -c 'newlock &amp; sleep 2s; systemctl suspend'</command></action></keybind>
		<keybind key="S-Pause"><action name="Execute"><prompt>Unlocked?</prompt><command>systemctl suspend</command></action></keybind>
		<keybind key="Help"><action name="Execute"><command>dunstify -r 182 'No.'</command></action></keybind>
		<keybind key="W-l"><action name="Execute"><command>newlock</command></action></keybind>
		<keybind key="A-F5"><action name="Execute"><command>pkill sleep</command></action></keybind>
	</keyboard>
	<mouse>
		<dragThreshold>10</dragThreshold>
		<doubleClickTime>200</doubleClickTime>
		<screenEdgeWarpTime>200</screenEdgeWarpTime>

	<!-- Window content actions -->
		<context name="Frame">
			<mousebind button="W-Left" action="Press"><action name="Focus"/><action name="Raise"/></mousebind>
			<mousebind button="W-Left" action="Click"><action name="Unshade"/></mousebind>
			<mousebind button="W-Left" action="Drag"><action name="Unsnap"/><action name="Move"/></mousebind>
			<mousebind button="W-Right" action="Press"><action name="Focus"/><action name="Raise"/><action name="Unshade"/></mousebind>
			<mousebind button="W-Right" action="Drag"><action name="Unsnap"/><action name="Resize"/></mousebind>
			<mousebind button="  W-Up"   action="Click"><action name="GotoDesktop"><wrap>no</wrap><to>previous</to></action></mousebind>
			<mousebind button="  W-Down" action="Click"><action name="GotoDesktop"><wrap>no</wrap><to>next</to></action></mousebind>
			<mousebind button="S-W-Up"   action="Click"><action name="SendToDesktop"><wrap>no</wrap><to>previous</to></action></mousebind>
			<mousebind button="S-W-Down" action="Click"><action name="SendToDesktop"><wrap>no</wrap><to>next</to></action></mousebind>
		</context>
		<context name="Client">
			<mousebind button="Left"   action="Press"><action name="Focus"/><action name="Raise"/></mousebind>
			<mousebind button="Middle" action="Press"><action name="Focus"/><action name="Raise"/></mousebind>
			<mousebind button="Right"  action="Press"><action name="Focus"/><action name="Raise"/></mousebind>
		</context>

	<!-- Non-window actions -->
		<context name="Desktop">
			<mousebind button="W-Up"   action="Click"><action name="GotoDesktop"><wrap>no</wrap><to>previous</to></action></mousebind>
			<mousebind button="W-Down" action="Click"><action name="GotoDesktop"><wrap>no</wrap><to>next</to></action></mousebind>
			<mousebind button="Left"  action="Press"><action name="Focus"/><action name="Raise"/></mousebind>
			<mousebind button="Right" action="Press"><action name="Focus"/><action name="Raise"/></mousebind>
			</context>
		<context name="Root"/>
	</mouse>
	<menu><file>/etc/xdg/openbox/menu.xml</file></menu>
	<applications>
		<application class="*"><decor>no</decor></application>
		<application class="Vlc" title="VLC (TopWindow)"><layer>above</layer><iconic>yes</iconic></application>
		<application class="Leafpad" type="normal"><layer>above</layer><size><width>400</width><height>300</height></size></application>
		<application class="Wrapper-2.0" type="normal"><position><x>835</x><y>0</y></position></application>
		<application class="Thunar" type="normal"><size><width>802</width><height>455</height></size></application> <!--Fixed size even when snapping-->

		<application class="Geany"><desktop>1</desktop></application>
		<application class="Tor Browser"><desktop>1</desktop></application>
		<application class="LibreWolf" name="Navigator"><desktop>2</desktop><maximized>true</maximized></application>
		<application class="LibreWolf" name="Devtools"><desktop>2</desktop><layer>above</layer></application>
		<application class="Steam"><desktop>3</desktop></application>
		<application class="hl2_linux"><desktop>3</desktop></application>
		<application class="discord"><desktop>4</desktop></application>
		<application class="explorer.exe"><desktop>5</desktop></application> <!--Wine desktop (FL Studio)-->
	</applications>
</openbox_config>

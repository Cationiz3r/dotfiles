set default-fg '#eee'
set default-bg '#222'
set inputbar-bg '#222'
set statusbar-bg '#222'
set statusbar-basename true
set statusbar-home-tilde true

## Hide status bar
set guioptions ''
set window-height 1000
set window-width  800

## Dark mode
set recolor true
set recolor-darkcolor '#eee'
set recolor-lightcolor '#202020'

## Dark mode anti-desaturation
set recolor-keephue 'true'
# setting these red so i can find out which is which
set index-fg '#f00'
set index-bg '#f00'
set index-active-fg '#f00'
set index-active-bg '#f00'

set scroll-step 80
set database null

set first-page-column '1:3'

# Key bindings
map f toggle_fullscreen
map s toggle_statusbar

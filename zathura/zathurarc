## Appeareance
set font 'JetBrains Mono bold 10'

set default-bg              '#222'
set inputbar-bg             '#222'
set notification-bg         '#777'
set notification-warning-bg '#777'
set notification-error-bg   '#800'
set statusbar-bg            '#222'

set default-fg              '#fff'
set inputbar-fg             '#fff'
set notification-fg         '#fff'
set notification-warning-fg '#fff'
set notification-error-fg   '#fff'

set highlight-color         '#800'
set highlight-active-color  '#f00'

set guioptions '' #Hide status bar
set window-height 1000
set window-width  800

# Dark mode
set recolor true
set recolor-darkcolor  '#eee'
set recolor-lightcolor '#222'
set recolor-keephue true

## Behaviors
set statusbar-home-tilde true
set incremental-search true
set scroll-step 80
set database null

## Key bindings
map f toggle_fullscreen
map s toggle_statusbar
map c recolor
map = zoom in
map + zoom

map [fullscreen] f toggle_fullscreen
map [fullscreen] s toggle_statusbar
map [fullscreen] c recolor
map [fullscreen] = zoom in
map [fullscreen] + zoom
